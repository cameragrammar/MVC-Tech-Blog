<style>
  .move-right {
    margin-left: 150px;
  }
</style>

<div class="container mb-5 pt-3">
<h2 class="align-center move-right is-size-3"> All Posts </h2>

  <hr>
  {{#if posts}}
    {{#each posts}}
      {{> post-info this}}
      <div class="buttons is-centered">
        <a href="/dashboard/edit/{{id}}" class="button has-background-success-dark has-text-white">Edit Post</a>
      </div>
    {{/each}}
  {{else}}
    <h6 class="pb-4 has-text-centered is-italic">You do not have any posts currently.</h6>
  {{/if}}
</div>